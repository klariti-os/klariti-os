{
  "$schema": "https://turborepo.dev/schema.json",
  "globalDependencies": [".env", ".env.example"],
  
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "inputs": ["openapi.json", "openapi-ts.config.ts"],
      "outputs": ["src/generated/**"]
    },
    "drizzle:generate": {
      "cache": false
    },
    "drizzle:migrate": {
      "cache": false
    },
    "drizzle:push": {
      "cache": false
    }
  }
}
