{
    "manifest_version": 3,
    "name": "klariti instagram blocker",
    "version": "1.0",
    "description": "Extension that controls the ability to visit Instagram",
    "permissions": [
        "storage",
        "webNavigation",
        "webRequest", 
        "webRequestBlocking",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/snwtr.png"
    },
    "background":{
        "service_worker": "scripts/background.js"
    },
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/popup.js"]
    }
  ]
}